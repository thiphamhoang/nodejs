

<form action="{{module_function_path}}/{{idTheme}}/{{function_sub_name}}/store" method="POST">
<input type="hidden" name="themeId" value="{{idTheme}}">
    <div class="container">
           <div class="row">
               <div class="col-md-6">
                   <!-- ten  -->
                    <div class="form-group mb-3">
                        <label >Tên {{module_name}}</label>
                        <input type="text" class="form-control"  placeholder="Bạn điền tên {{module_name}}" name="name" required>
                    </div>
                    <div class="form-group mb-3">
                        <label >Tên tệp html</label>
                        <input type="text" class="form-control"  placeholder="" name="fileName" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="name_cat_seo">Vị trí</label>
                        <select name="local" class="form-select" required>
                            <option value="head">Đầu website</option>
                           <option value="body" selected="">Giữa website</option>
                           <option value="footer">Chân website</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="name_cat_seo">Lề</label>
                        <select class="form-control" name="container">
                            <option value="">Trống</option>
                            <option value="container">Có lề</option>
                            <option value="container-fluid">Không lề</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="name_cat_seo">Trạng thái</label>
                        <select name="status" class="form-select" required>
                            <option value="on" selected>Công khai</option>
                            <option value="off">Khóa</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label >Loại (tùy chọn nâng cao)</label>
                        <input type="text" class="form-control"  name="type">
                    </div>
                    <div class=" my-3">
                        <button type="submit"  class="btn btn-primary mr-3">Lưu</button>
                        <a class="btn btn-danger" href="{{module_function_path}}/{{idTheme}}/{{function_sub_name}}">Hủy và quay lại</a>
                    </div>
               </div>
            </div>
    </div>
    
</form>