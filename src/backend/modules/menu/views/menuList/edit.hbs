

<form action="{{module_function_path}}/{{menuLocal._id}}/{{function_sub_name}}/{{menu._id}}?_method=PUT" method="POST">
<input type="hidden" name="menuLocalId" value="{{menuLocal._id}}">
    <div class="container">
           <div class="row">
                <div class="col-md-6">
                   <!-- ten  -->
                    <div class="form-group mb-3">
                        <label >Tên {{module_name}}</label>
                        <input type="text" class="form-control" value="{{menu.name}}" id="name_menu" placeholder="Bạn điền tên {{module_name}}" name="name" required>
                    </div>
                    <div class="form-group mb-3">
                        <label >Đường link</label>
                        <input type="text" class="form-control" id="slug_menu" value="{{menu.slug}}" name="slug">
                    </div>
                    {{!-- menu cha  --}}
                    <div class="form-group mb-3">
                        <label for="parent_cat">Menu cha</label>
                   
                        <select class="form-control" name="parentId" >
                                <option value="0">Trống </option>
                                {{{selectMenuParent menuList menu.parentId}}}
                        </select>
                     </div>
                    <div class="form-group mb-3">
                        <label for="name_cat_seo">Trạng thái</label>
                        <select name="status" class="form-select" required>
                            <option value="on" {{ifEquals menu.status 'on' 'selected'}}>Công khai</option>
                            <option value="off" {{ifEquals menu.status 'off' 'selected'}}>Khóa</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label >Loại (tùy chọn nâng cao)</label>
                        <input type="text" class="form-control"  name="type" value="{{menu.type}}">
                    </div>
                    <div class=" my-3">
                        <button type="submit"  class="btn btn-primary mr-3">Lưu</button>
                        <a class="btn btn-danger" href="{{module_function_path}}/{{menuLocal._id}}/{{function_sub_name}}">Hủy và quay lại</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="parent_cat">Thêm menu từ danh mục</label>
                   
                        <select class="form-control"  id="select_cat">
                                <option value="0">Trống </option>
                                {{{selectParent catList '0'}}}
                        </select>
                    </div>
                    {{!-- js them danh muc  --}}
                    <script>
                        $('#select_cat').change(function(){
                            var slug_cat = $('#select_cat option:selected').data('slug');
                            var name_cat = $('#select_cat option:selected').data('name');
                            $('#slug_menu').val(slug_cat);
                            $('#name_menu').val(name_cat);
                        });
                    </script>
                </div>

            </div>
    </div>
    
</form>