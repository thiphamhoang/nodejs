
<a href="#" data-name="{{this.name}}" data-value="{{this.value}}" data-id="{{this._id}}" class="btn btn-info btn-sm " data-bs-toggle="modal" data-bs-target="#uploadModal">
    <i class="fa fa-upload"></i> Đăng ảnh
</a>

<div class="my-2">
    {{#each this.value}}
    <span class="mod-preview">
        <img src="/img/theme/{{../idTheme}}/{{../idRow}}/{{../this._id}}/{{this}}" class="me-2" height="60px" width="auto">
        <span class="text-danger btn-delete-img-priview" data-feildId="{{../this._id}}" data-name="{{this}}" >Xóa</span>
    </span>
    {{/each}}
</div>
