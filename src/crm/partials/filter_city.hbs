    <div class="sidebar sidebar_city  mb-3">
        <div class="accordion" id="accordionType">
            <div class="accordion-item">
                <h2 class="accordion-header" id="S_city">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_city" aria-expanded="true" aria-controls="collapse_city">
                    Tỉnh - thành phố
                </button>
                </h2>
                <div id="collapse_city" class="accordion-collapse collapse show" aria-labelledby="S_city" data-bs-parent="#accordionType">
                    <div class="accordion-body">
                        <select name="cityId" class="form-select select_city">
                            <option value="">Trống</option>
                            {{#each cityList}}
                                <option value="{{this._id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                      
                       
                    </div>
                </div>
            </div>
        
        </div>
    </div>
    {{!-- script bo loc  --}}
    <script>
        var formFilter = $('#form-filter');
        var select_city = $('.select_city');
        select_city.change(function(){

            formFilter.action = 'action="{{module_path}}"'
            formFilter.submit();
        });
        var filterValue = '{{filter.cityId}}';

        //checkbox cac gia tri da chon
     
         //bo check tat ca 
        if(filterValue){
            $('.select_city').val(filterValue)
        }
        
    </script>