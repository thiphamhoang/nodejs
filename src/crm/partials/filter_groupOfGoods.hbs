 {{!-- loai hang hoa  --}}
    <div class="sidebar sidebar_groupOfGoods mb-3">
        <div class="accordion" id="accordionGroup">
            <div class="accordion-item">
                <h2 class="accordion-header" id="S_groupOfGoods">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_groupOfGoods" aria-expanded="true" aria-controls="collapse_groupOfGoods">
                    Nhóm hàng hóa
                </button>
                </h2>
                <div id="collapse_groupOfGoods" class="accordion-collapse collapse show" aria-labelledby="S_groupOfGoods" data-bs-parent="#accordionGroup">
                    <div class="accordion-body">
                      
                        {{#each groupOfGoodsList}}
                            <div class="form-check">
                                <input class="form-check-input checkbox_groupOfGoods" type="checkbox" name="groupOfGoods[]" value="{{this._id}}" id="checkbox_filter_group_{{this._id}}" checked>
                                <label class="form-check-label" for="checkbox_filter_group_{{this._id}}">
                                    {{this.name}}
                                </label>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        
        </div>
    </div>
    {{!-- script bo loc  --}}
    <script>
        var formFilter = $('#form-filter');
        var checkbox_groupOfGoods = $('.checkbox_groupOfGoods');
        checkbox_groupOfGoods.change(function(){
            formFilter.action = 'action="{{module_path}}"'
            formFilter.submit();
        });
        var filterValue = '{{filter.groupOfGoodsId}}';
        //checkbox cac gia tri da chon
        var filterValueSlit = filterValue.split(",");
         //bo check tat ca 
        if(filterValueSlit){
            $('.checkbox_groupOfGoods').prop('checked',false)
        }
        var i;
        for (i = 0; i < filterValueSlit.length; i++) {
            document.getElementById('checkbox_filter_group_'+filterValueSlit[i]).checked = true;
        } 
        
    </script>