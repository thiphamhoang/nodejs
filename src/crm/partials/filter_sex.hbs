    <div class="sidebar sidebar_sex  mb-3">
        <div class="accordion" id="accordionType">
            <div class="accordion-item">
                <h2 class="accordion-header" id="S_sex">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_sex" aria-expanded="true" aria-controls="collapse_sex">
                    Giới tính
                </button>
                </h2>
                <div id="collapse_sex" class="accordion-collapse collapse show" aria-labelledby="S_sex" data-bs-parent="#accordionType">
                    <div class="accordion-body">
                      
                      
                        <div class="form-check">
                            <input class="form-check-input checkbox_sex" type="checkbox" name="sex[]" value="male" id="checkbox_filter_Nam">
                            <label class="form-check-label" for="checkbox_filter_Nam">
                                Nam
                            </label>
                        </div>
                    
                        <div class="form-check">
                            <input class="form-check-input checkbox_sex" type="checkbox" name="sex[]" value="female" id="checkbox_filter_Nu">
                            <label class="form-check-label" for="checkbox_filter_Nu">
                                Nữ
                            </label>
                        </div>
                       
                    </div>
                </div>
            </div>
        
        </div>
    </div>
    {{!-- script bo loc  --}}
    <script>
        var formFilter = $('#form-filter');
        var checkbox_sex = $('.checkbox_sex');
        checkbox_sex.change(function(){

            formFilter.action = 'action="{{module_path}}"'
            formFilter.submit();
        });
        var filterValue = '{{filter.sex}}';

        //checkbox cac gia tri da chon
        var filterValueSlit = filterValue.split(",");
         //bo check tat ca 
        if(filterValueSlit){
            $('.checkbox_sex').prop('checked',false)
        }
        var i;
        for (i = 0; i < filterValueSlit.length; i++) {
            document.getElementById('checkbox_filter_'+filterValueSlit[i]).checked = true;
        } 
        
    </script>