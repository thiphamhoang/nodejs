    <div class="sidebar sidebar_typeOfCustomer  mb-3">
        <div class="accordion" id="accordionType">
            <div class="accordion-item">
                <h2 class="accordion-header" id="S_typeOfCustomer">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_typeOfCustomer" aria-expanded="true" aria-controls="collapse_typeOfCustomer">
                    Loại hàng hóa
                </button>
                </h2>
                <div id="collapse_typeOfCustomer" class="accordion-collapse collapse show" aria-labelledby="S_typeOfCustomer" data-bs-parent="#accordionType">
                    <div class="accordion-body">
                      
                      
                        <div class="form-check">
                            <input class="form-check-input checkbox_typeOfCustomer" type="checkbox" name="typeOfCustomer[]" value="personal" id="checkbox_filter_personal">
                            <label class="form-check-label" for="checkbox_filter_personal">
                                Cá nhân
                            </label>
                        </div>
                    
                        <div class="form-check">
                            <input class="form-check-input checkbox_typeOfCustomer" type="checkbox" name="typeOfCustomer[]" value="company" id="checkbox_filter_company">
                            <label class="form-check-label" for="checkbox_filter_company">
                                Công ty
                            </label>
                        </div>
                       
                    </div>
                </div>
            </div>
        
        </div>
    </div>
    {{!-- script bo loc  --}}
    <script>
        var formFilter = $('#form-filter');
        var checkbox_typeOfCustomer = $('.checkbox_typeOfCustomer');
        checkbox_typeOfCustomer.change(function(){

            formFilter.action = 'action="{{module_path}}"'
            formFilter.submit();
        });
        var filterValue = '{{filter.typeOfCustomer}}';

        //checkbox cac gia tri da chon
        var filterValueSlit = filterValue.split(",");
         //bo check tat ca 
        if(filterValueSlit){
            $('.checkbox_typeOfCustomer').prop('checked',false)
        }
        var i;
        for (i = 0; i < filterValueSlit.length; i++) {
            document.getElementById('checkbox_filter_'+filterValueSlit[i]).checked = true;
        } 
        
    </script>